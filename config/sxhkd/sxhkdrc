#
# wm independent hotkeys
#

# terminal emulators
super + ctrl + Return
    urxvt -e fish

super + Return
	kitty

super + shift + Return
	alacritty

super + alt + Return
        kitty tmux

super + shift + alt + Return
        kitty tmux attach-session

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# just close
ctrl + q
	bspc node --close

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# lockscreen bind
super + slash 
        betterlockscreen -l dim --off 5

#XF86WebCam
# pactl audio configurations
## increase volume
XF86AudioRaiseVolume 
        $XDG_CONFIG_HOME/sxhkd/scripts/volume.bash --increase

## decrease volume
XF86AudioLowerVolume 
        $XDG_CONFIG_HOME/sxhkd/scripts/volume.bash --decrease

## mute vloume
XF86AudioMute 
        $XDG_CONFIG_HOME/sxhkd/scripts/volume.bash --toggle

## mic mute
XF86AudioMicMute 
        $XDG_CONFIG_HOME/sxhkd/scripts/microphone.bash

# backlight configurations
## increase brightness
XF86MonBrightnessUp 
        $XDG_CONFIG_HOME/sxhkd/scripts/brightness.bash -I

# playerctl audio configurations
## play
XF86AudioPlay 
        playerctl play-pause 

## stop 
XF86AudioStop 
        playerctl pause 

# next audio
XF86AudioNext 
        playerctl next

# previous audio
XF86AudioPrev 
        playerctl previous

## decrease brightness
XF86MonBrightnessDown 
        $XDG_CONFIG_HOME/sxhkd/scripts/brightness.bash -D

## airplane mode
XF86RFKill
        $XDG_CONFIG_HOME/sxhkd/scripts/airplane.bash

# mpd audio configurations
## increase volume
shift + XF86AudioRaiseVolume 
        mpc volume +5

## decrease volume
shift + XF86AudioLowerVolume 
        mpc volume -5

## mute vloume
shift + XF86AudioMute 
        mpc volume 0

## play
shift + XF86AudioPlay 
        mpc toggle

## stop 
shift + XF86AudioStop 
        mpc stop

# next audio
shift + XF86AudioNext 
        mpc next

# previous audio
shift + XF86AudioPrev 
        mpc prev

# rofi app menu
super + d 
        rofi -show

# rofi run prompt
super + a
        rofi -show run

# rofi alt Tab
alt + Tab
        rofi -show window

# bind some nice apps
## launch web browser
super + shift + f 
        qutebrowser

## launch filemanager ranger
super + e
        kitty ranger

## launch system monitor htop
ctrl + shift + Escape 
        kitty btop

ctrl + alt + KP_Delete
        kitty htop

## night mode
super + n
        $XDG_CONFIG_HOME/sxhkd/scripts/redshift-toggle.bash

## jgmenu
super + button3
        jgmenu_run &

# screenshot configurations
# fullscreen screenshot save
super + Print 
        $XDG_CONFIG_HOME/sxhkd/scripts/screenshot --fullscreen

# cropped save
super + shift + x 
        $XDG_CONFIG_HOME/sxhkd/scripts/screenshot --selected

# clipboard fullscreen
Print 
        $XDG_CONFIG_HOME/sxhkd/scripts/screenshot --xclip-fullscreen

ctrl + Print
        flameshot gui

# clipboard cropped
super + shift + s 
        $XDG_CONFIG_HOME/sxhkd/scripts/screenshot --xclip-cropped

# toggle picom
super + backslash
        $XDG_CONFIG_HOME/picom/launcher --toggle

# show widgets
super + w
        exec $XDG_CONFIG_HOME/eww/mainlauncher

super + r
        exec $XDG_CONFIG_HOME/eww/wallpaperlauncher

# polybar hide/show
super + shift + slash
        {polybar-msg cmd hide && bspc config top_padding 0, polybar-msg cmd show}
    
# cycle borders
super + minus
        {bspc config border_width 0,bspc config border_width 1,bspc config border_width 2,bspc config border_width 3,bspc config border_width 4,bspc config border_width 5,bspc config border_width 6,bspc config border_width 7,bspc config border_width 8,bspc config border_width 9,bspc config border_width 10,bspc config border_width 11,bspc config border_width 12,bspc config border_width 13,bspc config border_width 14,bspc config border_width 15,bspc config border_width 16,bspc config border_width 17,bspc config border_width 18,bspc config border_width 19}
    
# cycle borders
super + shift + minus
        {bspc config window_gap 0,bspc config window_gap 1,bspc config window_gap 2,bspc config window_gap 3,bspc config window_gap 4,bspc config window_gap 5,bspc config window_gap 6,bspc config window_gap 7,bspc config window_gap 8,bspc config window_gap 9,bspc config window_gap 10,bspc config window_gap 11,bspc config window_gap 12,bspc config window_gap 13,bspc config window_gap 14,bspc config window_gap 15,bspc config window_gap 16,bspc config window_gap 17,bspc config window_gap 18,bspc config window_gap 19}
