@theme "/dev/null"
@import "theme.rasi"

configuration {
  font: "Iosevka Nerd Font 14";
  disable-history: true;
  sidebar-mode: false;
}

* {
  background-color: @base01;
  text-color: @base08;
}

window {
  transparency: "real";
  border-color: @base08;
  location: center;
  width: 1200px;
  height: 410px;
  x-offset: 0px;
  y-offset: 0px;
}

prompt {
  enabled: true;
  padding: 20px 10px 20px 10px;
  background-color: @base01;
  border-color: @base08;
  border-radius: 0 10% 10% 0;
  text-color: @base11;
}

textbox-prompt-colon {
  expand: false;
  str: " System ";
  background-color: @base14;
  text-color: @base01;
  padding: 22px 10px 20px 10px;
  font: "Iosevka Nerd Font Bold Italic 14";
}

inputbar {
  children: [ textbox-prompt-colon, prompt ];
  spacing: 0px;
  background-color: @base01;
  text-color: @base08;
  expand: false;
  border-color: @base08;
  margin: 0px 0px 0px 0px;
  padding: 0px;
  position: center;
}

listview {
  columns: 5;
  lines: 1;
  spacing: 15px;
  cycle: true;
  dynamic: true;
  layout: vertical;
}

mainbox {
  background-color: @base01;
  children: [ inputbar, listview ];
  spacing: 15px;
  margin: 40px;
}

element {
  background-color: @base01;
  orientation: vertical;
  border: 0 0 0.8em 0;
  border-color: @base12;
  border-radius: 0 0 2% 1%;
}

element-text {
  font: "feather 60";
  text-color: @base12;
  background-color: @base01;
  expand: true;
  horizontal-align: 0.5;
  vertical-align: 0;
  margin: 70px 0px 70px 0px;
}

element-text selected {
  text-color: @base14;
}

element selected {
  border-color: @base14;
  text-color: @base14;
  border: 0 0 1.2em 0;
}

