configuration {
	modi:				"drun,window,keys,filebrowser,run,combi";
	font:				"Iosevka 12";
	display-drun: 			"";
	drun-display-format:            "{name}";
	sidebar-mode: 			true;
}

@theme "/dev/null"

* {
	bg:				#3B4252;
	fg:				#D8DEE9;
	button:				#5E81AC;

	background-color:		@bg;
	text-color:			@fg;
}

window {
	transparency:                   "real";
	width:			    	70%;
        height:                         70%;
}

prompt { enabled: true; }

entry {
	placeholder:			"Search";
	placeholder-color:              @fg;
	expand:                         true;
	padding:                        2.0%;
	border-radius:			8px;
        font:				"Iosevka Bold 14";
}

inputbar {
	children: 			[ prompt, entry ];
	background-image:               url("img/bg-sat.jpg");
	expand:                         false;
	border-radius:                  0px 0 8px 8px;
	padding:                        100px 30px 30px 300px;
        font:				"Iosevka 14";
}

listview {
	columns:                        3;
	lines:	                        5;
	cycle:                          false;
	dynamic:                        true;
	layout:                         vertical;
	padding:			30px 100px 30px 100px;
}

mainbox { children: [ inputbar, listview ]; }

element {
	orientation:                    vertical;
	padding:                        1.5% 0% 1.5% 0%;
        margin:                         10px;
	border-radius:			8px;
        background-color:               #434C5E;
}

element-text {
	expand:                         true;
	vertical-align:                 0.5;
	margin:                         0.5% 3% 0% 3%;
	background-color: 		inherit;
	text-color:       		inherit;
}

element selected {
	background-color:               @button;
	border-radius:                  8px;
}

